<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_activity">

    <fragment
        android:id="@+id/home_activity"
        android:name="it.torino.totalshop.login.HomeFragment"
        android:label="Login"
        tools:layout="@layout/home">
        <action
            android:id="@+id/next_action"
            app:destination="@+id/login_page">
        </action>
    </fragment>

    <fragment
        android:id="@+id/login_page"
        android:name="it.torino.totalshop.login.LoginFragment"
        tools:layout="@layout/login">
        <argument
            android:name="UserType"
            app:argType="integer"
            android:defaultValue="0"/>

        <action
            android:id="@+id/next_action"
            app:destination="@+id/register_page">
        </action>
    </fragment>
    <fragment
        android:id="@+id/register_page"
        android:name="it.torino.totalshop.login.RegisterFragment"
        tools:layout="@layout/register">
        <argument
            android:name="UserType"
            app:argType="integer"
            android:defaultValue="0"/>

    </fragment>

</navigation>