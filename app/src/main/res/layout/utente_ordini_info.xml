<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/user_ord_inf_data"
                app:layout_constraintBottom_toTopOf="@id/user_ord_inf_store"
                android:text="Order N. 50"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:id="@+id/user_ord_inf_id"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/user_ord_inf_id"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/user_ord_inf_status"
                android:textSize="20sp"
                android:text="01/01/2002"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:id="@+id/user_ord_inf_data"/>

            <TextView
                android:id="@+id/user_ord_inf_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:text="Ferramenta Rossi"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/user_comment_title"
                app:layout_constraintEnd_toStartOf="@id/user_ord_inf_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_ord_inf_id" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/user_ord_inf_store"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_ord_inf_data"
                android:text="Completato"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="3dp"
                android:id="@+id/user_ord_inf_status"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/user_comment_title"
                android:text="Commento"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/user_ord_inf_commento"
                app:layout_constraintTop_toBottomOf="@id/user_ord_inf_store"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="3dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_comment_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/user_prod_title"
                android:text="@string/long_comment"
                android:id="@+id/user_ord_inf_commento"
                android:textSize="18dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="3dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prodotti Acquistati"
                android:textSize="20dp"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:id="@+id/user_prod_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/user_ord_inf_prodlist"
                app:layout_constraintTop_toBottomOf="@+id/user_ord_inf_commento"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_prod_title"
                android:maxLines="20"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toTopOf="@id/user_ord_inf_totprice"
                android:text="@string/example_prod_list"
                android:id="@+id/user_ord_inf_prodlist"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Prezzo Totale: 150â‚¬"
                android:textAlignment="textStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_ord_inf_prodlist"
                android:id="@+id/user_ord_inf_totprice"
                android:layout_marginEnd="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/utente_order_status_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/user_ord_inf_totprice"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/user_but_ann_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Annulla ordine"
                    app:cornerRadius="8dp"
                    android:backgroundTint="@color/Red"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_floatingbtn"
        android:src="@drawable/arrow_back_ios_24px"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Button indietro" />
</androidx.constraintlayout.widget.ConstraintLayout>