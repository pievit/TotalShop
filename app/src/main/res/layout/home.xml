<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.torino.totalshop.login.LoginActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TotalShop"
        android:textSize="42dp"
        app:layout_constraintBottom_toTopOf="@id/loginutentebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginutentebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accedi come utente"
        android:backgroundTint="@color/design_default_color_primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginvenditorebtn"
        app:layout_constraintTop_toBottomOf="@+id/title"/>


    <Button
        android:id="@+id/loginvenditorebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accedi come venditore"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginutentebtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>