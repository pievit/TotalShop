<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_settings_item_account_name"
        android:text="Nome"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:id="@+id/user_settings_item_account_titlename"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_settings_item_account_titlename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_settings_item_account_titleemail"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/user_settings_item_account_name"
        android:textSize="22sp"
        android:text="Mario Rossi"
        android:autofillHints="Nome Utente"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_settings_item_account_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_settings_item_account_email"
        android:layout_margin="10dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/user_settings_item_account_titleemail"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_settings_item_account_titleemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_settings_item_account_titlephone"
        android:layout_margin="10dp"
        android:id="@+id/user_settings_item_account_email"
        android:textSize="22sp"
        android:text="example@mail.com"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_settings_item_account_phone"
        app:layout_constraintTop_toBottomOf="@id/user_settings_item_account_email"
        android:layout_margin="10dp"
        android:text="Numero di telefono"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/user_settings_item_account_titlephone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_settings_item_account_titlephone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_settings_item_account_btnsave"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/user_settings_item_account_phone"
        android:textSize="22sp"
        android:text="2547896510"
        android:autofillHints="Numero di telefono"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_settings_item_account_phone"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/user_settings_item_account_btnsave"
        android:text="Salva modifiche"
        android:textSize="22sp"
        android:enabled="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>